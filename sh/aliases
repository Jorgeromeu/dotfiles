# vim:ft=sh

alias sudo='sudo '

# shorteneed commands
alias v='nvim'
alias g='git'
alias t='tmux'
alias pm='pacman'
alias cl='clear'
alias ccat='highlight'

# default syntax
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias ls='ls -hN --color=auto --group-directories-first'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias grep="grep --color=auto"

# fun
