# vim:ft=sh

alias sudo='sudo '

alias v='nvim'
alias g='git'
alias t='tmux'
alias pm='pacman'
alias cl='clear'

# verbose and interactive deletion
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'

# config files
alias brc='nvim ~/.bashrc'
alias vrc='nvim ~/.vimrc'
alias vspell='nvim .vim/spell/en.utf-8.add'
alias zrc="nvim ~/.zshrc"
alias alyml='nvim ~/.config/alacritty/alacritty.yml'
alias tconf='nvim ~/.config/tmux/tmux.conf'
alias xmrc='nvim ~/.xmonad/xmonad.hs'

alias ls='ls -hN --color=auto --group-directories-first'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias grep="grep --color=auto"

# fun
alias starwars="telnet towel.blinkenlights.nl"

