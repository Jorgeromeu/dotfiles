# vim:ft=sh

alias sudo='sudo '

# shorteneed commands
alias v='nvim'
alias g='git'
alias t='tmux'
alias pm='pacman'
alias cl='clear'
alias ipy='ipython'

# default options
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'

