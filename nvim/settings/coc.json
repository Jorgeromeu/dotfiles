{

    "metals.javaHome":"/usr/lib/jvm/java-11-openjdk",

	"diagnostic.warningSign":"!",

	"git.changedDecorator": " *",
	"git.stagedDecorator" :" staged",
	"git.untrackedDecorator": " untracked",
	"git.conflictedDecorator" : " conflict",

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "gas",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": { "directory": "/tmp/ccls" },
				"highlight": { "lsRanges" : true }
            }
        },
		"hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
    },
    "git.enableGutters": false
}
