" ==================
" BASIC SETTINGS
" ==================

set nocompatible
set hidden
set wildmenu

set laststatus=2
set mouse=a

syntax enable
filetype plugin on

set tabstop=4
set shiftwidth=4
set nostartofline
set backspace=indent,eol,start

" word wrap
set formatoptions=l
set breakindent
set linebreak

set noswapfile

set number
set relativenumber
set cursorline
 
set hlsearch
set incsearch
set ignorecase
set smartcase

set splitbelow
set splitright
