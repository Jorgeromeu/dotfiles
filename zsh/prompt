# vim:ft=sh

autoload -Uz vcs_info
precmd_vcs_info() { vcs_info }
precmd_functions+=( precmd_vcs_info )
setopt prompt_subst
zstyle ':vcs_info:git:*' formats '%B%F{yellow}[%b]%f'
zstyle ':vcs_info:*' enable git

git="\$vcs_info_msg_0_%b"

err='%(?..%B%F{red}[%?]%f%b)'
wd='%B%F{blue}%5~%f%b'

PROMPT="${wd} $ "
RPROMPT="${err}${git}"

